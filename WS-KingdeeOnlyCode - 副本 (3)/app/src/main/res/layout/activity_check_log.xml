<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fangzuo.assist.Activity.P2.CheckLogActivity">
    <include layout="@layout/top_bar"/>
    <LinearLayout
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <!--
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/scanbyCamera">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/scan" />
        </RelativeLayout>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单号: "
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <EditText
            android:selectAllOnFocus="true"
            android:id="@+id/ed_code"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="查询条码"
            android:gravity="center"
            android:background="@drawable/bg_edittext_selector"
            android:layout_weight="1" />
        <!--<RelativeLayout
            android:id="@+id/search_code"
            android:layout_width="40dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@mipmap/search" />
        </RelativeLayout>-->

    </LinearLayout>

    <include layout="@layout/line_heng"/>
    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="客户:"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:selectAllOnFocus="true"
            android:id="@+id/ed_client"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="查询客户"
            android:gravity="center"
            android:background="@drawable/bg_edittext_selector"
            android:layout_weight="1" />
        <RelativeLayout
            android:id="@+id/search_client"
            android:layout_width="40dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@mipmap/search" />
        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/line_heng"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="起始时间:  "
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <include layout="@layout/line_shu"/>
        <TextView
            android:id="@+id/tv_date_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>
    <include layout="@layout/line_heng"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="结束时间:  "
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <include layout="@layout/line_shu"/>
        <TextView
            android:id="@+id/tv_date_end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>
    <include layout="@layout/line_heng"/>
    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <Button
        android:id="@+id/btn_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_check"
        android:text="查看"
        android:textColor="@android:color/white" />

</LinearLayout>
