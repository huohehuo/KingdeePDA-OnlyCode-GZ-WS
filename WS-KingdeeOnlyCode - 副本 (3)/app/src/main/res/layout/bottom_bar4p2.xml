<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_page_tab_bg_color"
    android:orientation="horizontal"
    app:cardCornerRadius="10dp"
    app:cardElevation="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bottom_btn_purchase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_purchase"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/unpurchase" />

            <TextView
                android:id="@+id/tv_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单据"
                android:textColor="@color/fragment_text" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/bottom_btn_sale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_sale"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/unsale" />

            <TextView
                android:id="@+id/tv_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下推"
                android:textColor="@color/fragment_text" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/bottom_btn_storage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_storage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/unstorage" />

            <TextView
                android:id="@+id/tv_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仓存"
                android:textColor="@color/fragment_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_btn_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/setting_bottom" />

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@color/fragment_text" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>