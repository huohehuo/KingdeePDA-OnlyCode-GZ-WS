<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.fangzuo.assist.Activity.PurchaseInStorageActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="@color/cpb_blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:visibility="gone"
                        android:id="@+id/ishebing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合并"
                        android:textColor="@color/red"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其他出库"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:textSize="20sp"/>
                    <CheckBox
                        android:id="@+id/isAutoAdd"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自动添加"
                        android:textColor="@color/red"/>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="客户:"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:id="@+id/ed_supplier"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:background="@drawable/bg_edittext_selector"
                        android:layout_weight="3.5" />
                    <RelativeLayout
                        android:id="@+id/search_supplier"
                        android:layout_width="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="40dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/search"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="仓库"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_color"/>

                    <TextView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="仓位"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                    <com.fangzuo.assist.widget.SpinnerStorage4Type
                        android:id="@+id/sp_which_storage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_color"/>
                    <com.fangzuo.assist.widget.MyWaveHouseSpinner
                        android:id="@+id/sp_wavehouse"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="物料编码:"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="40dp"
                        android:id="@+id/scanbyCamera"
                        android:layout_weight="1">

                        <ImageView

                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/scan" />
                    </RelativeLayout>


                    <EditText
                        android:imeOptions="actionNone"
                        android:gravity="center_vertical"
                        android:id="@+id/ed_code"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="8"
                        android:background="@drawable/bg_edittext_selector"
                        android:singleLine="true" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/search"
                        android:layout_width="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="40dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/search" />
                    </RelativeLayout>


                </LinearLayout>

                <include layout="@layout/line_heng" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="物料名称"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_goodName"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_bg"
                    android:textColor="@color/white"
                    android:textSize="19sp" />
                <include layout="@layout/line_heng" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="型号"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />
                    <include layout="@layout/line_shu" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="库存"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                </LinearLayout>
                <include layout="@layout/line_heng" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_model"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/tv_bg"
                        android:textColor="@color/white"
                        android:textSize="19sp" />
                    <include layout="@layout/line_shu" />
                    <TextView
                        android:id="@+id/tv_numinstorage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/tv_bg"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="19sp" />

                </LinearLayout>
                <include layout="@layout/line_heng" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="批号"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <include layout="@layout/line_shu" />
                    <TextView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="单价"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />


                </LinearLayout>
                <include layout="@layout/line_heng" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Spinner
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:id="@+id/sp_pihao"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/ed_pihao"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="40dp"
                        android:textSize="15sp"
                        android:imeOptions="actionNone"
                        android:background="@drawable/bg_edittext_selector"/>
                    <include layout="@layout/line_shu" />
                    <EditText
                        android:layout_marginLeft="3dp"
                        android:id="@+id/ed_pricesingle"
                        android:layout_width="0dp"
                        android:inputType="numberDecimal"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/bg_edittext_selector"
                        android:singleLine="true"
                        android:textSize="15sp" />
                </LinearLayout>

                <include layout="@layout/line_heng" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="单位"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <include layout="@layout/line_shu" />

                    <TextView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="数量"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />


                </LinearLayout>
                <include layout="@layout/line_heng" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.fangzuo.assist.widget.SpinnerUnit
                        android:layout_marginRight="3dp"
                        android:id="@+id/sp_unit"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textSize="19sp" />
                    <include layout="@layout/line_shu" />
                    <EditText
                        android:layout_marginLeft="3dp"
                        android:id="@+id/ed_num"
                        android:inputType="numberDecimal"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edittext_selector"
                        android:singleLine="true"
                        android:textSize="19sp" />
                </LinearLayout>

                <include layout="@layout/line_heng" />



            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_check"
                android:text="添加"
                android:textColor="@android:color/white" />

            <include layout="@layout/line_shu" />

            <Button
                android:id="@+id/btn_finishorder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_check"
                android:text="完单"
                android:textColor="@android:color/white" />

            <include layout="@layout/line_shu" />

            <Button
                android:id="@+id/btn_backorder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_check"
                android:text="回单"
                android:textColor="@android:color/white" />

            <include layout="@layout/line_shu" />

            <Button
                android:id="@+id/btn_checkorder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_check"
                android:text="查看"
                android:textColor="@android:color/white" />


        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:tag="LEFT">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <CheckBox
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cb_isStorage"
                android:text="是否带出默认仓库"
                android:textSize="15sp"
                android:textColor="@android:color/holo_red_light"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="日期:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="是否良品"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
            <com.fangzuo.assist.widget.SpinnerGProduct
                android:id="@+id/sp_gproduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="出库类型:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/sp_inStoreType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="领料:"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <EditText
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:id="@+id/ed_capture_person"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:background="@drawable/bg_edittext_selector"
                    android:layout_weight="3.5" />
                <RelativeLayout
                    android:id="@+id/search_capture_person"
                    android:layout_width="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="40dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/search" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="发货:"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <EditText
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:id="@+id/ed_sign_person"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:background="@drawable/bg_edittext_selector"
                    android:layout_weight="3.5" />
                <RelativeLayout
                    android:id="@+id/search_sign_person"
                    android:layout_width="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="40dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/search" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="业务员:"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <EditText
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:id="@+id/ed_employee"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:background="@drawable/bg_edittext_selector"
                    android:layout_weight="3.5" />
                <RelativeLayout
                    android:id="@+id/search_employee"
                    android:layout_width="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="40dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/search" />
                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="领料:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.fangzuo.assist.widget.SpinnerPeople
                    android:id="@+id/sp_capture_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发货:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.fangzuo.assist.widget.SpinnerPeople
                    android:id="@+id/sp_sign_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="部门:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/sp_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="业务员:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.fangzuo.assist.widget.SpinnerPeople2
                    android:id="@+id/sp_employee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="主管:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.fangzuo.assist.widget.SpinnerPeople
                    android:id="@+id/sp_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用途:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/ed_zhaiyao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:singleLine="true"
                android:textSize="19sp" />


        </LinearLayout>
    </ScrollView>


</android.support.v4.widget.DrawerLayout>

