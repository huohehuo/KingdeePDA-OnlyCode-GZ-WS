<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@color/cpb_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产任务单下推"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="20sp"/>


        </RelativeLayout>
        <ListView
            android:id="@+id/lv_pushsub"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/line_heng"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="仓库"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center"/>
                <include layout="@layout/line_shu"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="仓位"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center"/>
            </LinearLayout>

            <include layout="@layout/line_heng"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.fangzuo.assist.widget.SpinnerStorage
                    android:id="@+id/sp_storage"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"/>
                <include layout="@layout/line_shu"/>
                <com.fangzuo.assist.widget.MyWaveHouseSpinner
                    android:id="@+id/sp_wavehouse"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <include layout="@layout/line_heng"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="名称"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center"/>
                <include layout="@layout/line_shu"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单位"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center"/>
            </LinearLayout>

            <include layout="@layout/line_heng"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/productName"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:background="@drawable/tv_bg"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>
                <include layout="@layout/line_shu"/>
                <com.fangzuo.assist.widget.SpinnerUnit
                    android:id="@+id/sp_unit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <include layout="@layout/line_heng"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="批号"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center"/>
                <include layout="@layout/line_shu"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="数量"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center"/>
            </LinearLayout>

            <include layout="@layout/line_heng"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/ed_pihao"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_edittext_selector"
                    android:layout_height="40dp"
                    android:layout_weight="1" />

                <EditText
                    android:enabled="false"
                    android:id="@+id/ed_num"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext_selector"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:gravity="center"
                    android:inputType="numberDecimal"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="35dp">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:text="添加"
                android:background="@drawable/btn_check"/>

            <include layout="@layout/line_shu"/>
            <Button
                android:id="@+id/btn_backorder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:text="回单"
                android:background="@drawable/btn_check"/>

            <include layout="@layout/line_shu"/>

            <Button
                android:id="@+id/btn_checkorder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_check"
                android:text="查看"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:tag="LEFT">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="是否带出默认仓库"
                android:id="@+id/cb_isStorage"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp" />
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cb_isAuto"
                android:text="自动添加"
                android:textSize="15sp"
                android:textColor="@android:color/holo_red_light"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="日期:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp" />
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="交货单位:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
            <LinearLayout
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="0dp"
                    android:id="@+id/edghunit"
                    android:background="@android:drawable/edit_text"
                    android:layout_height="40dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/search_ghunit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/search"/>
            </LinearLayout>


            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="采购方式:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/sp_purchaseMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发货:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.fangzuo.assist.widget.SpinnerPeople
                    android:id="@+id/sp_capture_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="业务员:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.fangzuo.assist.widget.SpinnerPeople
                    android:id="@+id/sp_employee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="主管:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.fangzuo.assist.widget.SpinnerPeople
                    android:id="@+id/sp_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="往来科目:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/sp_wanglaikemu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="保管:"
                android:textColor="@android:color/black"/>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.fangzuo.assist.widget.SpinnerPeople
                    android:id="@+id/sp_capture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="摘要:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/ed_zhaiyao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:singleLine="true"
                android:textSize="19sp" />


        </LinearLayout>
    </ScrollView>


</android.support.v4.widget.DrawerLayout>
